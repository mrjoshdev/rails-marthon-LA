<h3>New House Form</h3>
<%= form_for(@house) do |f| %>
  <div class="field">
    <%= f.label :name, 'Name' %><br/>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :author, 'Author Name' %><br/>
    <%= f.text_field :author %>
  </div>

  <div class="field">
    <%= f.label :source, 'Source' %><br/>
    <%= f.text_field :source %>
  </div>

  <div class="field">
    <%= f.label :motto, 'Motto' %><br/>
    <%= f.text_field :motto %>
  </div>

  <div class="actions">
    <%= f.submit 'Add House' %>
  </div>


<% end %>
